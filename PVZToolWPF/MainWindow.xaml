<Window x:Class="PVZToolWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PVZToolWPF"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="{Binding Title}" Loaded="Window_Loaded" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel x:Name="viewModel"/>
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="阳光值："/>
                <TextBox Width="100" Text="{Binding SunValue}" />
                <CheckBox IsChecked="{Binding LockSun}" Content="锁定"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
